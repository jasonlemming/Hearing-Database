{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/cron-update.py",
      "use": "@vercel/python",
      "config": {
        "maxDuration": 300
      }
    },
    {
      "src": "api/admin-task.py",
      "use": "@vercel/python",
      "config": {
        "maxDuration": 300
      }
    }
  ],
  "routes": [
    {
      "src": "/api/cron/scheduled-update/([0-9]+)",
      "dest": "api/cron-update.py"
    },
    {
      "src": "/api/cron/test-schedule/([0-9]+)",
      "dest": "api/cron-update.py"
    },
    {
      "src": "/api/cron/daily-update",
      "dest": "api/cron-update.py"
    },
    {
      "src": "/api/cron/health",
      "dest": "api/cron-update.py"
    },
    {
      "src": "/api/cron/policy-library-update",
      "dest": "api/cron-update.py"
    },
    {
      "src": "/api/admin/run-task/([0-9]+)",
      "dest": "api/admin-task.py"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/scheduled-update/3",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/policy-library-update",
      "schedule": "0 7 * * *"
    }
  ]
}
